// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id @default(cuid())
  description String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  deletedAt   DateTime
}

model Costumer {
  id          String @id @default(cuid())
  name        String
  document    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  deletedAt   DateTime
}

model Cart {
  id          String @id @default(cuid())
  costumerId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  deletedAt   DateTime
}

model CartItem {
  id          String @id @default(cuid())
  cartId      String
  productId   String
  quantity    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  deletedAt   DateTime
}

model Receipt {
  id          String @id @default(cuid())
  cartId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  deletedAt   DateTime
}
